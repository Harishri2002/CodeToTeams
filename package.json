{
  "name": "CodeToTeams",
  "displayName": "Share Code to Teams",
  "description": "Share code snippets directly to Microsoft Teams from VS Code",
  "version": "0.1.0",
  "publisher": "Harishri",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Collaboration"
  ],
  "keywords": [
    "teams",
    "share",
    "code",
    "snippet",
    "microsoft teams",
    "collaboration",
    "office"
  ],
  "activationEvents": [
    "onCommand:extension.shareToTeams",
    "onCommand:extension.teamsSignOut",
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.shareToTeams",
        "title": "Share to Teams"
      },
      {
        "command": "extension.teamsSignOut",
        "title": "Sign Out from Teams"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.shareToTeams",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.shareToTeams",
          "when": "editorHasSelection",
          "group": "Teams"
        },
        {
          "command": "extension.teamsSignOut",
          "group": "Teams"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.shareToTeams",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Share Code to Teams",
      "properties": {
        "shareToTeams.preferDirectApi": {
          "type": "boolean",
          "default": true,
          "description": "Prefer direct API integration over deep linking"
        },
        "shareToTeams.includeLanguage": {
          "type": "boolean",
          "default": true,
          "description": "Include language identifier in the shared code blocks"
        },
        "shareToTeams.includeFileName": {
          "type": "boolean",
          "default": true,
          "description": "Include file name in shared code blocks"
        },
        "shareToTeams.defaultRecipients": {
          "type": "array",
          "default": [],
          "description": "Default recipients for sharing (email addresses)",
          "items": {
            "type": "string"
          }
        },
        "shareToTeams.cacheLifetime": {
          "type": "number",
          "default": 30,
          "description": "Number of days to keep authentication cache before requiring re-login"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run lint",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@azure/msal-node": "^3.5.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.9.0",
    "isomorphic-fetch": "^3.0.0",
    "node-fetch": "^2.6.9"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.60.0",
    "eslint": "^8.28.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "vsce": "^2.15.0",
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harishri/vscode-teams-code-share.git"
  },
  "bugs": {
    "url": "https://github.com/harishri/vscode-teams-code-share/issues"
  },
  "homepage": "https://github.com/harishri/vscode-teams-code-share#readme",
  "license": "MIT",
  "author": "Harishri"
}